class Solution {
public:
    int calPoints(vector<string>& ops) {
        vector<int> vec;
        int ans = 0;
        for(int i=0; i<ops.size(); i++){
            if(ops[i] == "C"){
                ans -= vec.back();
                vec.pop_back();
            }
            else if(ops[i] == "D"){
                vec.push_back(vec[vec.size()-1] * 2);
                ans += vec.back();
            }
            else if(ops[i] == "+"){
                vec.push_back(vec.back() + vec[vec.size()-2]);
                ans += vec.back();
            }
            else{
                stringstream num(ops[i]);
                int val = 0;
                num >> val;
                vec.push_back(val);
                ans += vec.back();
            }
        }
        
        return ans;
    }
};
