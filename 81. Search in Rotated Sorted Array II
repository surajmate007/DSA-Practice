class Solution {
public:
    bool search(vector<int>& nums, int target) {
        int n = nums.size(); int idx = -1;
        for(int i=0; i<n-1; i++){
            if(nums[i] > nums[i+1]){
                idx = i+1;
                break;
            }
        }
        if(idx == -1){
            idx = 0;
        }
        
        int start = idx; int end = n + idx;
        while(start <= end){
            int mid = (start + end)/2;
            if(nums[mid % n] == target){
                return true;
            }
            else if(nums[mid % n] > target){
                end = mid-1;
            }
            else{
                start = mid + 1;
            }
        }
        return false;
    }
};
