class Solution {
public:
    int maxDistance(vector<int>& colors) {
        int ans1 = 0; int ans2 = 0; int first = colors[0]; int last = colors[colors.size()-1];
        for(int i=colors.size()-1; i>=0; i--){
            if(colors[i] != first){
                ans1 = i;
                break;
            }
        }
        for(int i=0; i<colors.size(); i++){
            if(colors[i] != last){
                ans2 = i;
                break;
            }
        }
        int n = colors.size()-1;
        return max(ans1, n-ans2);
    }
};

// The first or last house will always be there in the difference calculation.
