/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */

class Solution {
public:
    TreeNode* lowestCommonAncestor(TreeNode* root, TreeNode* p, TreeNode* q) {
        if(root == NULL){
            return NULL;
        }
        
        int rval = root->val;
        int pval = p->val;
        int qval = q->val;
        TreeNode* ans = root;
        
        if(rval == pval or rval == qval){
            return root;
        }
        else if((rval > pval and rval < qval) or (rval < pval and rval > qval)){
            return root;
        }
        else if(rval > pval and rval > qval){
            ans = lowestCommonAncestor(root->left, p, q);
        }
        else if(rval < pval and rval < qval){
            ans = lowestCommonAncestor(root->right, p, q);
        }
        
        return ans;
    }
};
