class Solution {
public:
    int lastStoneWeight(vector<int>& stones) {
        while(stones.size() > 1){
            sort(stones.begin(), stones.end());
            int n = stones.size()-1;
            int y = stones[n]; int x = stones[n-1];
            stones.pop_back(); stones.pop_back();
            y = y-x;
            if(y != 0){
                stones.push_back(y);
            }
        }
        
        if(stones.size() == 1){
            return stones[0];
        }
        else{
            return 0;
        }
    }
};


//optimised code using maxheap

class Solution {
public:
    int lastStoneWeight(vector<int>& stones) {
        priority_queue<int> pq;
        for(int i=0; i<stones.size(); i++){
            pq.push(stones[i]);
        }
        while(pq.size() > 1){
            int y = pq.top();
            pq.pop();
            int x = pq.top();
            pq.pop();
            if(y != x){
                pq.push(y-x);
            }
        }
        if(pq.size() == 0){
            return 0;
        }
        else{
            return pq.top();
        }
    }
};
